#include<stdio.h>
#include<string.h>
#include<stdlib.h>

void fdisplay(char **data, int n_data){//3

      int i;
      i=0;
      while( i < n_data){//4
            
            printf("ยก %i, data %s \n", i, data[ i  ] );
            i+=1;
      }//4

}//3

void fprocess(void){//2

      char data[ 3 ][ 20 ] = { "the", "quick", "brown" };            
      int i, n_i, _str_size;
      printf("display input: \n");
      i = 0;
      while(  i < 3){//3
      
            printf(" i %d, data %s\n", i, data[ i ] );
            i+=1;
      }//3
      
      char **_str;
      
      i= 0;
      _str_size = 0;
      while( i < 3 ){//4
      
            n_i = strlen( data[ i ]) ;
            if ( i == 0 ){ //5
                  
                  _str = (char**) malloc(  _str_size +1 );
                  _str[ i ] = (char*) malloc( n_i +1 );
            }else {//5
            
                  _str = (char**) realloc( _str, _str_size +1 );
                  _str[ i ] = (char*) malloc(  n_i +1 );
                  
            }//5    
                  
            
            strcpy( _str[ _str_size ], data[ i ] );
            _str_size +=1;
            i+=1;
      }//4
      
      
      printf("\n\n result: \n" );
       i= 0;
      while( i < 3 ){//4
            
            printf("ยก %i, _str %s \n", i, _str[ i  ] );
            i+=1;
      }//4
      
      printf("\n\n fdisplay mode: \n");
      fdisplay( _str, _str_size);
      
      
}//2


int main(void){//2

      fprocess( );
      return 0;
}//2


